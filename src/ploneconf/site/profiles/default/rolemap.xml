<?xml version="1.0"?>
<rolemap>
    <roles>
      <role name="Ploneconf Member"/>
    </roles>

  <permissions>
        <permission name="ploneconf.site.addploneconfprofile"
                    acquire="True">
          <role name="Manager"/>
          <role name="Site Administrator"/>
