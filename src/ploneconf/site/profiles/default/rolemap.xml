<?xml version="1.0"?>
<rolemap>
    <roles>
      <role name="Ploneconf Member"/>
    </roles>

  <permissions>
    <!-- -*- extra stuff goes here -*- -->

    <permission name="ploneconf.site: Add Speaker"
                acquire="True">
      <role name="Manager"/>
      <role name="Site Administrator"/>
      <role name="Contributor"/>
      <role name="Anonymous"/>
    </permission>

    <permission name="ploneconf.site: Add Talk"
                acquire="True">
      <role name="Manager"/>
      <role name="Site Administrator"/>
      <role name="Contributor"/>
      <role name="Ploneconf Member"/>
    </permission>

    <permission name="ploneconf.site: Add Sponsor"
                acquire="True">
      <role name="Manager"/>
      <role name="Site Administrator"/>
      <role name="Contributor"/>
    </permission>


    <permission name="Add portal content" acquire="True">
      <role name="Contributor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Ploneconf Member"/>
      <role name="Site Administrator"/>
    </permission>
  </permissions>

</rolemap>
